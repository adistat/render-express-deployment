<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo list</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <header>
    <div class="box">
        <h1 id="heading">Todo list</h1>
    </div> 
    </header>
    <div style="text-align: center; margin: 20px;">
    <input type="text" id="filterInput" placeholder="Filter..." />
    </div>
    <div class="itm">
         <% for (var i=0; i< ejes.length; i++){%>
            <div class="item">
            <input type="checkbox">
             <p ><%= ejes[i] %></p>
             </div>
         <% } %>     
         </div>
        <form action="/" method="POST" class="form-container">
            <input type="text" id="taskInput" name="ele1" placeholder="Enter the task">
        <button  id="btn" type="submit">+</button>
         </form>
    <footer>
    <div class="container">
      <p>When you complete your Task you are near to achive your Goal.</p>
    </div>
     </footer>
         <!-- Filter script -->
  <script>
    document.getElementById("filterInput").addEventListener("input", function () {
      const filterValue = this.value.toLowerCase();
      const items = document.querySelectorAll(".item");
      items.forEach((item) => {
        const taskText = item.querySelector("p").textContent.toLowerCase();
        if (taskText.includes(filterValue)) {
          item.style.display = "";
        } else {
          item.style.display = "none";
        }
      });
    });
    const btn = document.getElementById("btn");
    btn.onclick = function () {
      const p = document.getElementById("taskInput").value;
      if (p===""){
        alert("Field is Empty");
      }
      else{
        alert(p+" Task added");
      }
    };
  </script>
</body>
</html>